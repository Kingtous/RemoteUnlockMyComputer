<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recordData"
    android:layout_margin="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/record_type_and_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/record_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Type"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/record_sign_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:layout_margin="5dp"
                android:layout_gravity="bottom|end"
                android:visibility="gone"
                />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>



        <LinearLayout
            android:id="@+id/record_mac_user_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_type_and_default"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/record_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAC Address"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:layout_weight="100"
                />

            <TextView
                android:id="@+id/record_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="User"
                android:textSize="15sp"
                android:layout_weight="100"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/record_mac_user_field">

            <Button
                android:id="@+id/record_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/record_mac_user_field"
                android:text="修改"
                android:layout_weight="100"
                />

            <Button
                android:id="@+id/record_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/record_mac_user_field"
                android:layout_toEndOf="@+id/record_edit"
                android:text="删除"
                android:layout_weight="100"
                />
            <Button
                android:id="@+id/record_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/record_mac_user_field"
                android:layout_toEndOf="@+id/record_edit"
                android:text="连接"
                android:layout_weight="100"
                />

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>